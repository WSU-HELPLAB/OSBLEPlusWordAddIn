<UserControl x:Class="OSBLEPlusWordAddin.Rubric.CriterionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSBLEPlusWordAddin.Rubric"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="criterionUserControl" Background="#FFE8E8E8" Margin="0,0,0,5">
        <CheckBox x:Name="Header" Margin="5" Padding="2,2,0,0" FontWeight="Bold" Checked="Header_Checked" Unchecked="Header_Unchecked"/>
        <StackPanel x:Name="Levels" Margin="25,25,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1">
        </Border>
    </Grid>
</UserControl>
